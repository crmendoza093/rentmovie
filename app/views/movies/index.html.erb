<p id="notice"><%= notice %></p>

<h1>Movie list</h1>

<%= link_to 'New Movie', new_movie_path, :class => "text-light btn btn-info btn-lg" %>

<div class="card-group">
  <% @movies.each do |movie| %>
    <div class="card" style="width: 18rem;">
      <a class="card-img-top" style="height: 300px;"><%= image_tag movie.picture_url, height: '100%', width: '100%' if movie.picture.present? %></a>
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h5>
        <p class="card-text"><%= movie.desc %></p>
        <p class="card-text"><%= movie.price %> USD</p>
        <a href="#" class="text-light btn btn-primary">Booking</a>
      </div>
    </div>
  <% end %> 
</div>
<br>

